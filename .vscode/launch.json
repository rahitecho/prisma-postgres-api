{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Debug TypeScript Server",
        "runtimeArgs": [
          "-r",
          "ts-node/register"
        ],
        "args": [
          "${workspaceFolder}/src/server.ts"
        ],
        "cwd": "${workspaceFolder}",
        "protocol": "inspector",
        "skipFiles": ["<node_internals>/**"]
      }
    ]
  }
  